<div id="form-post" class="col-md-8 order-md-1">
  <h2>AGREGAR</h2>
  <hr>
  <form action="/usuarios/post" method="post">
  <!--NOMBRE-->
  <label for="nombre">Nombre</label>
  <input type="text" id="nombre" name="nombre" placeholder="" class="form-control" required>
  <!--APELLIDO-->
  <label for="apellido">Apellido</label>
  <input type="text" id="apellido" name="apellido" placeholder="" class="form-control" required>
  <!--RUT-->
  <label for="rut">RUT</label>
  <input type="text" id="rut" name="rut" placeholder="" class="form-control" required>
  <!--EMAIL-->
  <label for="email">Correo</label>
  <input type="text" id="email" name="email" placeholder="" class="form-control" required>
  <!--CONTRASEÑA-->
  <label for="contrasena">Contraseña</label>
  <input type="text" id="contrasena" name="contrasena" placeholder="" class="form-control" required>
  <!--TIPO PERMISO-->
  <label for="tipo_permiso">Tipo Permiso</label>
  <input type="text" id="tipo_permiso" name="tipo_permiso" placeholder="" class="form-control" required>
  <hr>
  <button class="btn btn-lg btn-primary btn-block" id="btnvalida" type="submit">Agregar</button>
  </form>
  <br>
  {{mensaje}}
</div>